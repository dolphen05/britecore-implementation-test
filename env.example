Ubuntu .env file

source env/bin/activate
export FLASK_APP=run.py
export FLASK_ENV=production
export SECRET_KEY=your_secret_key
export APP_DATABASE=postgresql://username:password@localhost:5432/app_database_name
export TEST_DATABASE=postgresql://username:password@localhost:5432/test_database_name


Windows env.bat file

set FLASK_APP=run.py
set FLASK_ENV=production
set SECRET_KEY=your_secret_key
set APP_DATABASE=postgresql://username:password@localhost:5432/app_database_name
set TEST_DATABASE=postgresql://username:password@localhost:5432/test_database_name
env\Scripts\activate
